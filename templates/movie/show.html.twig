{% extends 'base.html.twig' %}

{% block title %}Movie : {{ movie is not null ? movie.title : 'Not found' }}{% endblock %}

{% block body %}
<div class="example-wrapper">
    {% if movie is not null %}
        <h1>Movie : {{ movie.title }}</h1>

        <img class="float-end" src="{{ movie.poster }}" alt="{{ movie.title }} poster">
        <ul>
            <li>Id: {{ movie.id }}</li>
            <li>Country: {{ movie.country }}</li>
            <li>ReleasedAt: {{ movie.releasedAt|date('d M Y') }}</li>
            <li>Plot: {{ movie.plot }}</li>
            <li>Genre: {{ movie.genres|map(genre => genre.name)|join(', ') }}</li>
            {# <li>Genre reduced: {{ movie.genres|reduce((carry, genre) => carry != '' ? carry ~ ', ' ~ genre.name : genre.name) }}</li> #}
        </ul>
    {% else %}
        <h1>Movie not found.</h1>
    {% endif %}
</div>
{% endblock %}
